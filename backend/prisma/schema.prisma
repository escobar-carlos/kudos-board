generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Board {
  id       Int     @id @default(autoincrement())
  title    String
  category String
  author   String?
  cards    Card[]
}

model Card {
  id       Int    @id @default(autoincrement())
  board_id Int
  message  String
  gif      String
  upvotes  Int    @default(0)
  author   String?
  board    Board  @relation(fields: [board_id], references: [id], onDelete: Cascade)
}
