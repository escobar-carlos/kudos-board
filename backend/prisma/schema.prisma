generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Board {
  id       Int     @id @default(autoincrement())
  title    String
  category String
  author   String?
  // cards    Card[] @onDelete(Cascade)
}

model Card {
  id       Int    @id @default(autoincrement())
  board_id Int
  message  String
  gif      String
  upvotes  Int
  // comments Comment[]]@onDelete(Cascade)
}
